[flake8]
max-line-length = 127
max-complexity = 10
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    F401,  # imported but unused (for __init__.py files)
exclude = 
    .git,
    __pycache__,
    .venv,
    .env*,
    build,
    dist,
    *.egg-info
per-file-ignores =
    __init__.py:F401 